page{
    background-color: #eee;
}
.zhengxinRecode{
    width: calc(100% - 40px);
    margin: 20px auto;
}
.noList{
    width: 100%;
    margin-top: 150px;
    text-align: center;
}
.noListImg{
    width: 55px;
    height: 55px;
}
.recordList{
    width: 100%;
    height: 110px;
    background-color: #fff;
    border-radius: 5px;
    margin-top: 5px;
}
.timer{
    width: calc(100% - 40px);
    height: 15px;
    border-bottom: 1px solid #eee;
    padding: 5px 0px 5px 40px;
    position: relative;
    line-height: 15px;
    font-size: 12px;
}
.timerImg{
    width: 15px;
    height: 15px;
    position: absolute;
    left: 15px;
    /* right: 0; */
    top: 5px;
}
.listCenter{
    width: calc(100% - 30px);
    margin: 15px auto 10px;
    display: flex;
    flex-wrap: nowrap;
    justify-content: space-between;
}
.CenterLeft{
    width: 65%;
    padding-left: 45px;
    /* background-color: rgb(233, 147, 34); */
    position: relative;
    height: 30px;
    line-height: 30px;
    font-size: 14px;
    color: #744C1E;
}
.kahaoImg{
    width: 35px;
    height: 23px;
    position: absolute;
    left: 0;
    top: 3px;  
}
.CenterRight{
    text-align: right;
    font-size: 17px;
    color: red;
    height: 30px;
    line-height: 30px;
    /* background-color: rgb(233, 147, 34); */
}
.listBottom{
    width: calc(100% - 30px);
    margin: 0px auto 15px;
    display: flex;
    flex-wrap: nowrap;
    justify-content: space-between;
    /* background-color: rgb(233, 147, 34); */
    font-size: 9px;
    position: relative;
    color: #744C1E;
}
.confirm{
    width: 52px;
    padding: 0;
    height: 16px;
    line-height: 16px;
    text-align: center;
    border-radius: 10px;
    background-color: #CBB585;
    outline: none;
    border: none;
    color: #fff;
    font-size: 9px;
    position: absolute;
    right: 0;
    bottom: 0;
}
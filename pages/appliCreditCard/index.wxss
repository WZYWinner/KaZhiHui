page{
    background-color: #eee;
}
.appliCreditCard{
    width: calc(100% - 40px);
    margin: 20px auto;
}
.CreditCardList{
    width: 100%;
    height: 160px;
    margin-bottom: 10px;
    border-radius: 10px;
    position: relative;
}
.CreditCardListImg{
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1;
}
.CreditCardListTop{
    width: 100%;
    padding: 15px;
    display: flex;
    flex-wrap: nowrap;
    justify-content: start;
    position: relative;
    z-index: 100;
}
.bankPhoto{
    width: 30px;
    height: 30px;
}
.bankPhotoImg{
    width: 100%;
    height: 100%;
    border-radius: 50%;
}
.bankInfo{
    width: calc(100% - 75px);
    margin-left: 10px;
    position: relative;
    color: #fff;
}
.bankTitle{
    font-size: 14px;
}
.bankDesc{
    font-size: 12px;
    margin-top: 10px;
    letter-spacing: 1px;
}
.immediApply{
    width: 80px;
    height: 20px;
    line-height: 20px;
    text-align: center;
    position: absolute;
    top: 0;
    right: 0;
    background-color: #CBB585;
    font-size: 11px;
    border-radius: 3px;
    color: #333;
}
.CreditCardListBottom{
    width: calc(100% - 30px);
    padding: 0 15px;
    display: flex;
    flex-wrap: nowrap;
    justify-content: space-between;
    position: absolute;
    bottom: 15px;
    z-index: 100;
    /* background-color: #fff; */
    height: 30px;
}
.yinlianView{
    width: 40px;
    height: 30px;
}
.yinlianImg{
    width: 100%;
    height: 100%;
}
.searhJIN{
    width: 80px;
    height: 20px;
    line-height: 20px;
    text-align: center;
    /* background-color: #CBB585; */
    font-size: 11px;
    border-radius: 3px;
    color: #fff;
    border: 1px solid #fff;
    box-sizing: border-box;
    margin-right: 4px;
    margin-top: 5px;
}
.cusWarning {
  width: calc(100% - 10px);
  background-color: bisque;
  font-size: 11px;
  padding: 5px;
  letter-spacing: 1px;
}

.productCategory {
  width: calc(100% - 30px);
  margin: 15px auto;
}

.value-class {
  flex: none !important;
}

/* 图片 */
.prodEqCodeView {
  width: calc(100% - 30px);
  margin: 15px auto;
}

.titleText {
  width: 100%;
  font-size: 14px;
  margin-bottom: 5px;
}

.jietuImg {
  width: 100px;
  display: block;
  margin: 0px auto;
}
/* 上传二维码 */
.prodEqCode {
  width: 100%;
  height: 130px;
  position: relative;
  background-color: #E8E8E8;
}

.prodEqCode .q-image {
  width: 100%;
  height: 100%;
}

.q-imageNo {
  width: 30px;
  height: 30px;
  display: block;
  margin: 0px auto;
  padding-top: 36px;
}

.upLoadBtn {
  position: absolute;
  width: 100%;
  background-color: rgba(255, 255, 255, 0);
  height: 100%;
  text-align: center;
  z-index: 90;
  border: none;
  outline: none;
}

/* 兑换码 */
.redeemCode{
  width: calc(100% - 30px);
  margin: 15px auto; 
  margin-bottom: 65px;
}
.field-index--van-field{
  border: 1px solid #eee !important;
}
.declarSave{
  width: 100%;
  height: 40px;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 100;
}
.saveBut{
  width: calc(100% - 30px);
  margin: 0 auto;
  height: 30px;
  text-align: center;
  line-height: 30px;
  background-color: #CBB585;
  color: #fff;
  font-size: 14px;
  border-radius: 5px;
}
.van-radio__icon{
  width: 0 !important;
  height: 0 !important;
}
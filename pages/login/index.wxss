page{
    background-color: #eee;
}
.login{
    width: 100%;
}
.logoImg{
    width: 128px;
    height: 110px;
    margin: 60px auto 40px;
    display: block;
}
.infoIpt{
    width: calc(100% - 60px);
    margin: 20px auto;
}
.field-index--van-field{
    border-radius: 5px !important;
    margin-bottom: 15px !important;
}
.van-button--primary{
    background-color: #CBB585 !important;
    border: none !important;
}
.loginView{
    width: calc(100% - 60px);
    margin: 70px auto 0;
}
.loginText{
    width: 100%;
    text-align: center;
    font-size: 11px;
}
.loginDesc{
    color: #CBB585;
}
.loginBtn{
    width: 100%;
    height: 30px;
    line-height: 30px;
    background-color: #CBB585;
    margin-top: 5px;
    font-size: 15px;
}
/* 选择登录方式 */
.chooseloginWay{
    width: 100%;
    position: relative;
    font-size: 12px;
}
.chooselogin{
    color: #CBB585;
    position: absolute;
    right: 0;
    top: 0;
    margin-top: -5px;
}
.setPwd{
    color: #CBB585;
    position: absolute;
    left: 0;
    top: 0;
    margin-top: -5px;
}